<p id="notice"><%= notice %></p>

<h1>Personals</h1>

<table>
  <thead>
    <tr>
      <th>Player name</th>
      <th>Age</th>
      <th>Team</th>
      <th>College</th>
      <th>Average points</th>
      <th>Average assists</th>
      <th>Average rebounds</th>
      <th>Average steals</th>
      <th>Average blocks</th>
      <th>Average turnover</th>
      <th>Average personal foul</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.player_name %></td>
        <td><%= personal.age %></td>
        <td><%= personal.team %></td>
        <td><%= personal.college %></td>
        <td><%= personal.average_points %></td>
        <td><%= personal.average_assists %></td>
        <td><%= personal.average_rebounds %></td>
        <td><%= personal.average_steals %></td>
        <td><%= personal.average_blocks %></td>
        <td><%= personal.average_turnover %></td>
        <td><%= personal.average_personal_foul %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

